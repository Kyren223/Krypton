
int TAPE_SIZE = 7;
str tape = "";

func initializeTapeWith = void(char c) {
    for (int i = 0; i < TAPE_SIZE; i = i + 1) {
        tape = tape + c;
    }
};

func printTape = void() {
    print("Tape: [");
    for (int i = 0; i < TAPE_SIZE; i = i + 1) {
        print(0 + tape[i]);
        if (i != TAPE_SIZE - 1) { print(", "); }
    }
    print("]\n");
};

func dumpDebugInfo = void() {
    print("IP: " + (0 + ip) + " (" + userInput[0 + ip] + ")| ");
    print("SP: " + sp + " | ");
    print("SIP: " + (0 + stack[sp]) + " | ");
    print("DP: " + dp + " | ");
    print("*DP: " + (0 + tape[dp]) + "\n");
};

func setTapeAtIndex = str(int index, char newC) {
    str copyTape = "";
    for (int i = 0; i < TAPE_SIZE; i = i + 1) {
        if (i == index) {
            copyTape = copyTape + newC;
        }
        else {
            copyTape = copyTape + tape[i];
        }
    }
    return copyTape;
};

initializeTapeWith('\0');
printTape();

print("Enter turing machine program: ");
str userInput = input();
print('\n');

bool loop = true;
int dp = 0; // Data Pointer
char ip = '\0'; // Instruction Pointer
int sp = -1; // Stack Pointer
str stack = ""; // The stack
str output = "";

while (loop) {

    char instruction = userInput[0 + ip];
    if (instruction == '\0') { loop = false; }
    else {

        if (instruction == '>') {
            dp = dp + 1;
            if (dp >= TAPE_SIZE) {
                print("Error: dp (" + dp + ") out of bounds\n");
                loop = false;
            }
        }

        if (instruction == '<') {
            dp = dp - 1;
            if (dp < 0) {
                print("Error: dp (" + dp + ") out of bounds\n");
                loop = false;
            }
        }

        if (instruction == '+') {
            tape = setTapeAtIndex(dp, tape[dp] + '\1');
        }

        if (instruction == '-') {
            tape = setTapeAtIndex(dp, tape[dp] - '\1');
        }

        if (instruction == '.') {
            output = output + tape[dp];
        }

        if (instruction == ',') {
            print("Input: ");
            tape = setTapeAtIndex(dp, input[0]);
            print("\n");
        }

        if (instruction == ']') {
            if (tape[dp] != '\0') {
                ip = stack[sp];
            } else {
                str copyStack = "";
                for (int i = 0; i < sp; i = i + 1) {
                    copyStack = copyStack + stack[i];
                }
                stack = copyStack;
                sp = sp - 1;
            }
        }

        if (instruction == '[') {
            stack = stack + ip;
            sp = sp + 1;
            if (tape[dp] == '\0') {
                while (tape[0 + ip] != ']') {
                    ip = ip + '\1';
                }
            }
        }
        ip = ip + '\1';
    }
}

print("Output: " + output + "\n");
printTape();



